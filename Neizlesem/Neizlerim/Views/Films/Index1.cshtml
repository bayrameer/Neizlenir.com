@model List<FilmDto>
@{
    ViewData["Title"] = "Index1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- main-area -->
<main>

    <!-- breadcrumb-area -->
    <section class="breadcrumb-area breadcrumb-bg" data-background="/img/bg/breadcrumb_bg.jpg">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumb-content">
                        <h2 class="title">Tüm Filmler <span></span></h2>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Movie</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb-area-end -->
    <!-- movie-area -->
    <section class="movie-area movie-bg" data-background="/img/bg/movie_bg.jpg">
        <div class="container">
            <div class="row align-items-end mb-60">
                <div class="col-lg-6">
                    <div class="section-title text-center text-lg-left">
                        <span class="sub-title">Filmler</span>
                        <h2 class="title">Sitemizdeki Tüm Filmler</h2>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="movie-page-meta">
                        <div class="tr-movie-menu-active text-center">
                          
                        </div>
                        <form action="#" class="movie-filter-form">
                            <select class="custom-select">
                                
                                
                            </select>
                        </form>
                    </div>
                </div>
            </div>
            <div class="row tr-movie-active">
                
                @foreach (var item in Model)
                {
                    <div class="col-xl-3 col-lg-4 col-sm-6 grid-item grid-sizer cat-one">
                        <div class="movie-item movie-item-three mb-50">
                            <div class="movie-poster">
                                
                                    <img src="@item.Images" alt="" height="450" />
                               

                                <ul class="overlay-btn">
                                    <li class="rating">
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                    </li>
                                    <li><a href="https://www.youtube.com/watch?v=R2gbPxeNk2E" class="popup-video btn">Watch Now</a></li>
                                    <li><a asp-route-id="@item.Id" asp-controller="Films" asp-action="Details" class="btn">Details</a></li>
                                </ul>
                            </div>
                            <div class="movie-content">
                                <div class="top">
                                    <h5 class="title"><a href="movie-details.html">@item.Name</a></h5>
                                    <span class="date">@item.Puan</span>
                                </div>
                                <div class="bottom">
                                    <ul>
                                        <li><span class="quality">4k</span></li>
                                        <li>
                                            <span class="duration"><i class="far fa-clock"></i> 128 min</span>
                                            <span class="rating"><i class="fas fa-thumbs-up"></i> 3.5</span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
            <div class="row">
                <div class="col-12">
                    <div class="pagination-wrap mt-30">
                       
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- movie-area-end -->
    <!-- newsletter-area -->
    
    
    <!-- newsletter-area-end -->

</main>
<!-- main-area-end -->